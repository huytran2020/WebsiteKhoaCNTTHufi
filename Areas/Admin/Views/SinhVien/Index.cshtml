@model PagedList.IPagedList<DoAnKhoaCNTT.Models.Database.SinhVien>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
        <div class="input-group">
            <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-primary" type="button">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>
        </div>
    </form>
    <a href="@Url.Action("Index", "SinhVien")">Thêm mới</a>
</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th></th>
                    <th>Mã sinh viên</th>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>Status</th>
                    <th>Điểm TB</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th></th>
                    <th>Mã sinh viên</th>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>Status</th>
                    <th>Điểm TB</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Admin/KhoaLuan/Edit/@item.MaSinhVien">Sửa</a>
                            |
                            <a href="/Admin/KhoaLuan/Edit/@item.MaSinhVien ">Xóa</a>
                        </td>
                        <td>@item.MaSinhVien</td>
                        <td>@item.Name</td>
                        <td>@(item.DateBorn.HasValue? @item.DateBorn.Value.ToString("dd/MM/yyyy") : "")</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.Phone</td>
                        <td>@item.Status</td>
                        <td>@item.Mark</td>
                    </tr>

                }

            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>

